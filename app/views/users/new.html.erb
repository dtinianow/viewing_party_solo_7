<%= form_with model: @user, url: users_path, method: :post, data: {turbo: false}, local: true do |f| %>
<div class="row">
  <div class="col-md-6 col-lg-4">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %><br>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-lg-4">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %><br>
  </div>
</div>

  <%= f.submit 'Create New User', class: "btn btn-primary" %>
<% end %>