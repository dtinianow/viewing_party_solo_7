<div class="container text-center">
  <h4 class="my-4">Movies</h4>
  <%= link_to 'Discover Movies', discover_user_path(@user), class: 'btn btn-primary' %><br><br>
  <div class="justify-content-center">
      <% if @movies.any? %>
        <% @movies.each do |movie| %>
            <div class="row">
              <div class="col">
                <div class="card h-100">
                  <div class="card-body">
                    <h6 class="card-title"><%= link_to "#{movie.title}", user_movie_path(@user, movie.id), class: 'text-decoration-none' %></h6>
                    <p class="card-text">Vote Average: <%= movie.vote_average %></p>
                  </div>
                </div>
              </div>
            </div>
        <% end %>
      <% else %>
        <p class="mt-4">No movies found.</p>
      <% end %>
  </div>
</div>